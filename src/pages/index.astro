---
import BaseLayout from '../layouts/BaseLayout.astro';
import MarsGlobeWrapper from '../components/MarsGlobeWrapper';
import ExpandableSidebar from '../components/ExpandableSidebar';
import marsLocations from '../data/marsLocations';
---

<BaseLayout title="Mars Population - Interactive Globe">
  <div class="relative w-full h-screen bg-black overflow-hidden">
    <!-- Mars Globe -->
    <div class="w-full h-full">
      <MarsGlobeWrapper client:load locations={marsLocations} />
    </div>

    <!-- Sidebar -->
    <ExpandableSidebar client:load className="z-50" />

    <!-- Welcome Overlay -->
    <div class="absolute top-8 left-8 z-40 max-w-md">
      <div
        class="bg-gray-900/95 backdrop-blur-md border border-gray-700 rounded-lg p-6 shadow-2xl"
      >
        <h1 class="text-white font-display text-2xl font-bold mb-2">
          Mars Population
        </h1>
        <p class="text-gray-300 text-sm leading-relaxed mb-4">
          Explore 27 key Mars locations with interactive markers. Hover over
          markers to see detailed information about each site's terraforming
          potential.
        </p>
        <div class="flex items-center space-x-4 text-xs text-gray-400">
          <div class="flex items-center space-x-1">
            <div class="w-2 h-2 bg-green-400 rounded-full"></div>
            <span>High Potential (9-10)</span>
          </div>
          <div class="flex items-center space-x-1">
            <div class="w-2 h-2 bg-yellow-400 rounded-full"></div>
            <span>Medium (7-8)</span>
          </div>
          <div class="flex items-center space-x-1">
            <div class="w-2 h-2 bg-orange-400 rounded-full"></div>
            <span>Low (5-6)</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Instructions -->
    <div class="absolute bottom-8 right-8 z-40 max-w-sm">
      <div
        class="bg-gray-900/95 backdrop-blur-md border border-gray-700 rounded-lg p-4 shadow-2xl"
      >
        <h3 class="text-white font-display text-sm font-semibold mb-2">
          How to Explore
        </h3>
        <ul class="text-gray-300 text-xs space-y-1">
          <li>• Hover over markers to see location details</li>
          <li>• Click markers to select and view full info</li>
          <li>• Drag to rotate the globe</li>
          <li>• Scroll to zoom in/out</li>
          <li>• Use sidebar to explore categories</li>
        </ul>
      </div>
    </div>
  </div>
</BaseLayout>
