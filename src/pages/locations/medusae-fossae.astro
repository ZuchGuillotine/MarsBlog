            <span class="text-white text-sm">Global reservoir</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Terraforming Assessment Section -->
  <section class="mb-12">
    <h2 class="text-3xl font-bold text-white mb-6 font-display">
