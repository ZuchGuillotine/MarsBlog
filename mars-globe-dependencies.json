{
  "name": "mars-globe-components",
  "description": "Interactive 3D Mars Globe components for Astro",
  "dependencies": {
    "@react-three/fiber": "^8.15.0",
    "@react-three/drei": "^9.88.0",
    "three": "^0.157.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/three": "^0.157.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "astro": "^3.0.0",
    "tailwindcss": "^3.0.0"
  },
  "installation": {
    "npm": "npm install @react-three/fiber @react-three/drei three react react-dom",
    "pnpm": "pnpm add @react-three/fiber @react-three/drei three react react-dom",
    "yarn": "yarn add @react-three/fiber @react-three/drei three react react-dom"
  },
  "astroConfig": {
    "integrations": [
      "@astrojs/react",
      "@astrojs/tailwind"
    ],
    "clientDirectives": [
      "client:load",
      "client:visible",
      "client:idle"
    ]
  }
}